<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Zapomniałeś hasła?</h2>

    <div class="form-group">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
      :defaults => { :input_html => { :class => "form-control" } }, html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, required: true, autofocus: true, class: "form-control", placeholder: "Email" %>

    </div>

      <%= f.button :submit, "Resetuj hasło", :class => "btn btn-lg btn-primary btn-block" %>
      <% end %>

  </div>
</div>
