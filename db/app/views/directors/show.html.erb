<%- model_class = Director -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:imie) %></dt>
      <dd><pre class="prettyprint"><%= @director.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nazwisko) %></dt>
      <dd><pre class="prettyprint"><%= @director.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:data_urodzin) %></dt>
      <dd><pre class="prettyprint"><%= @director.date_birth %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("Wróć")),
              directors_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("Edytuj")),
              edit_director_path(@director), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("Usuń")),
              director_path(@director),
              method: 'delete',
              data: { confirm: t('.confirm', default: 'Jesteś pewien, że chcesz usunąć tego reżysera?') },
              class: 'btn btn-danger' %>
</div>
