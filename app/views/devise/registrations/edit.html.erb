<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Edytuj konto</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="text-center">
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email",  class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <i>(jeśli nie chcesz zmieniać hasła - zostaw puste pole)</i><br />
          <%= f.password_field :password, autocomplete: "off", placeholder: "Zmień hasło",  class: "form-control" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Powtórz hasło", class: "form-control" %>
        </div>

        <div class="field">
            <i>(Aby dokonać zmian podaj aktualne hasło)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", placeholder: "Podaj aktualne hasło", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Edytuj", :class => "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>

      <p>Chcesz nas opuścić? <%= link_to "Usuń konto", registration_path(resource_name), data: { confirm: "Jesteś pewien, że chcesz usunąć konto?" }, method: :delete %></p>
      <%= link_to "Wróć", :back %>
    </div>
  </div>
</div>
