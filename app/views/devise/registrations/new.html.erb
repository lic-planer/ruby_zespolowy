<div class="container">
  <div class="form-signin">
    <h2 class="form-signin-heading">Rejestracja</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
      :defaults => { :input_html => { :class => "form-control" } }, html: {method: :post} ) do |f| %>
      <%= devise_error_messages! %>

      <div class="text-center">
        <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email",  class: "form-control" %>
        </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Hasło",  class: "form-control" %><br />
        <% if @minimum_password_length %>
        <em>(Min <%= @minimum_password_length %> znaków)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Powtórz hasło",  class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Zarejestruj się", :class => "btn btn-lg btn-primary btn-block" %>
      </div>
        <% end %>
    </div>
  </div>
</div>
