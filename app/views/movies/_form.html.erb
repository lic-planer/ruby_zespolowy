<%= cloudinary_js_config %>
<%= form_for @movie, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :tytuł, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kraj_produkcji, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :country, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rok_premiery, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :year, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :plakat, class: 'control-label col-md-2' %>
    <div class="col-md-10">
<%= f.file_field :image %>
<%= image_tag @movie.image_url %>

    </div>
  </div>
  <div class="form-group">
    <%= f.label :reżyser, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :director_id, options_for_select(Director.all.map{|f|["#{f.name} #{f.last_name}", f.id]}), class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gatunek, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :type_id, options_for_select(Type.all.map{|f|[f.name, f.id]}), class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :trailer, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :trailer, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit "Dodaj film", class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.anuluj")),
                  movies_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
